<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="sentinel-tests">

    <!-- parameter -->
    <parameter name="operatingsystem" value="windows"></parameter>
    <parameter name="browser" value="chrome"></parameter>
    <parameter name="appURL" value="https://demo.spreecommerce.org/"></parameter>
    <parameter name="baseURI" value="https://restful-booker.herokuapp.com/"></parameter>

    <!-- listeners -->
    <listeners>
        <listener class-name="org.sentinel.tests.utils.testng.ITestListeners"/>
        <listener class-name="org.sentinel.tests.utils.testng.AnnotationTransformer"></listener>
    </listeners>

    <!-- run all tests -->
    <test name="all-api-ui-tests">
        <packages>
            <package name="org.sentinel.tests.api"></package>
            <package name="org.sentinel.tests.ui"></package>
        </packages>
    </test>

    <!-- run all api tests -->
    <test name="all-api-tests">
        <packages>
            <package name="org.sentinel.tests.api"></package>
        </packages>
    </test>

    <!-- run all ui tests -->
    <test name="all-ui-tests">
        <packages>
            <package name="org.sentinel.tests.ui"></package>
        </packages>
    </test>

    <!-- run particular test class -->
    <test name="class-tests">
        <classes>
            <class name="org.sentinel.tests.ui.spreecom.LogoutTest"></class>
        </classes>
    </test>

    <!-- run particular test method -->
    <test name="method-tests">
        <classes>
            <class name="org.sentinel.tests.api.booking.T0201">
                <methods>
                    <include name="getBookingsIds"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite> <!-- Suite Parent-->
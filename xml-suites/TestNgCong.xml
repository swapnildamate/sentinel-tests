<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="sentinel-tests">

    <!-- parameter -->
    <parameter name="operatingsystem" value="windows"></parameter>
    <parameter name="browser" value="chrome"></parameter>
    <parameter name="appURL" value="https://demo.spreecommerce.org/"></parameter>
    <parameter name="baseURI" value="https://restful-booker.herokuapp.com/"></parameter>

    <!-- listeners -->
    <listeners>
        <listener class-name="org.sentinel.tests.utils.testng.ITestListeners"/>
        <listener class-name="org.sentinel.tests.utils.testng.AnnotationTransformer"></listener>
    </listeners>

    <!-- run all tests -->
    <test thread-count="1" name="all-api-ui-tests">
        <packages>
            <package name="org.sentinel.tests.api.booking"></package>
            <package name="org.sentinel.tests.ui.spreecom"></package>
        </packages>
    </test>

</suite> <!-- Suite Parent-->